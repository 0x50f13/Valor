cc_library {
    name: "libvalor",
    srcs: ["src/**/*.c"],
    local_include_dirs: ["include"],

    target: {
       host: {
          enabled: true
      }
    }
}

cc_library_host_static {
    name: "libvalor_host",
    srcs: ["src/**/*.c"],
    local_include_dirs: ["include"],

    target: {
       host: {
          enabled: true
      }
    }
}